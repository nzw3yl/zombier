<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.association :project_status %>
  <%= f.input :current_start, :as => :date_picker, input_html: {"data-date-format" => "yyyy-mm-dd"}  %>
  <%= f.input :current_close, :as => :date_picker, input_html: {"data-date-format" => "yyyy-mm-dd"}  %>
  <%= f.association :project_type %>
  <%= f.association :customer %>
  <%= f.input :value %>
  <%= f.input :cost, disabled: true %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
