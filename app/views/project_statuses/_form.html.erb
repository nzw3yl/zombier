<%= simple_form_for @project_status, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :color_code %>
  <%= f.input :organization_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                project_statuses_path, :class => 'btn' %>
  </div>
<% end %>
